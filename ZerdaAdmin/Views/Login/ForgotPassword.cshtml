@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
<div class="col-lg-6">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-2">@ViewData["Title"]</h1>
            <p class="mb-4">
                Anladık, bir şeyler oluyor. E-posta adresinizi aşağıya girin, size şifrenizi sıfırlamanız için bir bağlantı gönderelim!
            </p>
        </div>
        <form class="user">
            <div class="form-group">
                <input type="email" class="form-control form-control-user"
                       id="exampleInputEmail" aria-describedby="emailHelp"
                       placeholder="Email Gir">
            </div>
            <a asp-controller="Login" asp-action="Login" class="btn btn-primary btn-user btn-block">
                Şifre Sıfırla
            </a>
        </form>
        <hr>
        <div class="text-center">
            <a class="small" asp-controller="Login" asp-action="Register">Kayıt Ol</a>
        </div>
        <div class="text-center">
            <a class="small" asp-controller="Login" asp-action="Login">Giriş Yap</a>
        </div>
    </div>
</div>
